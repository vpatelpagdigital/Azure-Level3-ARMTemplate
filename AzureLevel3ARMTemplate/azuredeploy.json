            },
            "properties": {
                "name": "[variables('Tenant.RubinPlayApi.ApiApp')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('Tenant.AppServicePlan.Name'))]"
            }
        },
