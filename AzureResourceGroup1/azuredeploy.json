            "name": "[variables('Tenant.RubinPlay.ServiceBus')]",
            "type": "Microsoft.ServiceBus/Namespaces",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            //"properties": {
